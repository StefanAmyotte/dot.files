[core]
    editor = nvim
    xcludesfile = ~/.config/git/gitignore
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff3
[mergetool]
    path = nvim
[push]
  # 'git push' will push the current branch to its tracking branch
  # the usual default is to push all branches
  default = upstream
